@model Excembly_vAlpha.ViewModels.ContratacionViewModel

@{
    ViewData["Title"] = "Detalles de la Contratación";
}

<link rel="stylesheet" href="~/css/DetalleContratacion.css">
<div class="detalle-container">
    <div class="header-title">Detalles de la Contratación</div>

    <div class="detalle-informacion">
        <h4>Información del Usuario</h4>
        <p>Usuario: <span>@Model.NombreUsuario</span></p>
        <p>Correo: <span>@Model.CorreoUsuario</span></p>
    </div>

    <div class="detalle-informacion">
        <h4>Información del Plan</h4>
        <p>Plan: <span>@Model.NombrePlan</span></p>
        <p>Precio: <span>$@Model.PrecioPlan.ToString("F2")</span></p>
    </div>

    <div class="detalle-informacion">
        <h4>Información del Servicio</h4>
        <p>Servicio: <span>@Model.NombreServicio</span></p>
        <p>Precio: <span>$@Model.PrecioServicio.ToString("F2")</span></p>
    </div>

    <div class="detalle-informacion">
        <h4>Servicios Contratados</h4>
        @if (Model.ServiciosContratados != null && Model.ServiciosContratados.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Servicio</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var servicio in Model.ServiciosContratados)
                    {
                        <tr>
                            <td>@servicio.NombreServicio</td>
                            <td>$@servicio.PrecioServicio.ToString("F2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No hay servicios contratados.</p>
        }
    </div>

    <div class="detalle-informacion">
        <h4>Estado de la Contratación</h4>
        <p class="estado @(Model.Estado.ToLower())">@Model.Estado</p>
        <p>Fecha de Contratación: <span>@Model.FechaContratacion.ToShortDateString()</span></p>
        @if (Model.FechaCancelacion.HasValue)
        {
            <p>Fecha de Cancelación: <span>@Model.FechaCancelacion.Value.ToShortDateString()</span></p>
        }
    </div>

    <div class="acciones">
        <a href="@Url.Action("Index", "Contratacion")" class="btn btn-secondary">Regresar</a>
    </div>
</div>
