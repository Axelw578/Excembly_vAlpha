@model Excembly_vAlpha.ViewModels.DetalleContratacionViewModel

@{
    ViewData["Title"] = "Detalle de Contratación";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5.3.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery 3.7.1 -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</head>
<body>

    <div class="container mt-5">
        <h2>@ViewData["Title"]</h2>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Plan: @Model.NombrePlan</h5>
                <p>Precio: @Model.PrecioPlan</p>
                <p>Estado: @Model.Estado</p>
                <p>Fecha de Contratación: @Model.FechaContratacion.ToString("dd/MM/yyyy")</p>

                <h4>Servicios Incluidos en el Plan</h4>
                <ul>
                    @foreach (var servicio in Model.ServiciosIncluidos)
                    {
                        <li>@servicio.Nombre</li>

                    }
                </ul>

                <h4>Servicios Adicionales Contratados</h4>
                <ul>
                    @foreach (var servicio in Model.ServiciosAdicionalesContratados)
                    {
                        <li>@servicio.NombreServicio - @servicio.PrecioConDescuento (Descuento: @servicio.Descuento%)</li>
                    }
                </ul>

                <h4>Técnico Asignado</h4>
                <p>@Model.NombreTecnico</p>
                <img src="@Model.FotoTecnicoUrl" alt="Foto Técnico" width="100" />

                <h4>Dirección de la Cita</h4>
                <p>@Model.DireccionDomicilioCompleta</p>

                <h4>Política de Cancelación</h4>
                <p>@Model.PoliticaCancelacion</p>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5.3.3 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>