@model Excembly_vAlpha.ViewModels.EmpresaViewModel

<h1>Información de la Empresa</h1>

<div>
    <h2>Misión y Visión</h2>
    <p>@Model.MisionVision</p>

    <h2>Horario de la Tienda</h2>
    <p>@Model.HorarioTienda</p>

    <h2>Domicilio de la Tienda</h2>
