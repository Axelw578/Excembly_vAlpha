@model Excembly_vAlpha.ViewModels.EmpresaViewModel

@{
    ViewData["Title"] = "Empresa";

    var p_misionvision = Model.MisionVision.Split(new[] { "Vision:" }, StringSplitOptions.None);
    var mision = p_misionvision[0].Replace("Mision:", "").Trim();
    var vision = p_misionvision.Length > 1 ? p_misionvision[1].Trim() : "";

    var p_serv = Model.Aclaracion.Split(new[] { "Servicios en el Establecimiento:" }, StringSplitOptions.None);
    var serv_dom = p_serv[0].Replace("Servicios a Domicilio:", "").Trim();
    var serv_est = p_serv.Length > 1 ? p_serv[1].Trim() : "";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/empresa.css" />
    <script src="~/js/empresa.js"></script>
</head>
<body>
    <!-- Banner Excembly -->
    <section class="section section-lg section-main-bunner section-main-bunner-filter text-center">
        <div class="main-bunner-img">
            <div class="overlay"></div>
        </div>
        <div class="main-bunner-inner">
            <div class="container">
                <div class="banner-content img-fluid">
                    <h1 class="box-default-title gradient-text">Excembly</h1>
                    <div class="box-default-decor"></div>
                    <p class="big main-mini-text">Descubre más sobre nosotros :)</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Misión y Visión -->
    <div id="Contenedor-base" class="container mt-auto">
        <div class="info-box row fade-in-top animate-on-scroll">
            <div class="col-8">
                <div class="row">
                    <h2 class="titles-cst">Misión</h2>
                    <p style="text-align: justify;">@mision</p>
                </div>
                <div class="row">
                    <h2 class="titles-cst">Visión</h2>
                    <p style="text-align: justify;">@vision</p>
                </div>
            </div>
            <div class="col fade-in-right animate-on-scroll">
                <img src="https://i.ibb.co/d7hTqzS/ElAxel.jpg" alt="Imagen Representativa" class="img-card" />
            </div>
        </div>

        <!-- Mapa, Domicilio y Horario -->
        <div class="info-box fade-in-left animate-on-scroll">
            <div class="row info-box">
                <h4 class="titles-cst shadow-sm p-3 bg-body rounded text-center"><strong>ENCUÉNTRANOS AQUÍ</strong></h4>
                <div class="col-lg-7" style="height: 350px; overflow: hidden;">
                    <iframe class="img-card" src="@Model.ImagenMapa" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
                <div class="col">
                    <div>
                        <h2>Domicilio</h2>
                        <p>@Model.DomicilioTienda</p>
                    </div>
                    <div>
                        <h2>Horario</h2>
                        <p>@Model.HorarioTienda</p>
                    </div>
                </div>
            </div>
            <div class="row info-box">
                <div class="col shadow-sm p-3 bg-body rounded">
                    <h3 class="titles-cst">Aclaración Servicios a Domicilio:</h3>
                    <p style="text-align: justify;">@serv_dom</p>
                </div>
                <div class="col shadow-sm p-3 bg-body rounded">
                    <h3 class="titles-cst">Aclaración Servicios en el Establecimiento:</h3>
                    <p style="text-align: justify;">@serv_est</p>
                </div>
            </div>
        </div>

        <!-- Vista parcial de reseñas -->
        <div id="reseñasContainer" class="mt-4 fade-in-right animate-on-scroll"></div>

        <!-- Políticas de cancelación acordeón -->
        <div class="accordion fade-in-bottom animate-on-scroll" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header titles-cst" id="headingPolicies">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePolicies" aria-expanded="false" aria-controls="collapsePolicies">
                        Políticas de Cancelación
                    </button>
                </h2>
                <div id="collapsePolicies" class="accordion-collapse collapse" aria-labelledby="headingPolicies" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <p>@Model.PoliticaCancelacion</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>