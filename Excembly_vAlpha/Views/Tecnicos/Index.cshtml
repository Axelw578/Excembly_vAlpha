<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Técnicos de la Empresa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/tecnicos.css" rel="stylesheet" />
</head>
<body>
    <div class="container position-relative">
        <!-- Flecha izquierda -->
        <button class="scroll-btn left-btn">&lt;</button>

        <div class="tecnicos-container d-flex">
            @foreach (var tecnico in Model)
            {
                <div class="tecnico card my-3 p-3">
                    <!-- Imagen del técnico -->
                    <div class="imagen">
                        <img src="@tecnico.Foto" alt="@tecnico.Nombre" class="img-fluid card-img-top" />
                    </div>

                    <!-- Nombre del técnico -->
                    <div class="header card-title h5">@tecnico.Nombre @tecnico.Apellidos</div>

                    <!-- Experiencia del técnico -->
                    <div class="experiencia card-text">Experiencia: @tecnico.Experiencia</div>

                    <!-- Edad del técnico -->
                    <div class="edad card-text">Edad: @tecnico.Edad</div>

                    <!-- Disponibilidad del técnico -->
                    <div class="disponibilidad card-text">
                        Disponibilidad: @(tecnico.Disponibilidad ? "Disponible" : "No Disponible")
                    </div>

                    <!-- Fecha de registro del técnico -->
                    <div class="fecha-registro card-text">Registrado el: @tecnico.FechaRegistro</div>
                </div>
            }
        </div>

        <!-- Flecha derecha -->
        <button class="scroll-btn right-btn">&gt;</button>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/tecnicos.js"></script>
</body>
</html>

