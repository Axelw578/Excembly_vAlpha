@model Excembly_vAlpha.ViewModels.ComentarioDetalleAdminViewModel

@{
    ViewData["Title"] = "Detalle del Comentario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Detalle del Comentario</h1>

        <div class="card">
            <div class="card-header">
                <h4>Información del Comentario</h4>
            </div>
            <div class="card-body">
                <p><strong>Usuario:</strong> @Model.UsuarioNombre</p>
                <p><strong>Comentario:</strong> @Model.ComentarioTexto</p>
                <p><strong>Plan:</strong> @Model.PlanNombre</p>
                <p><strong>Servicio:</strong> @Model.ServicioNombre</p>
                <p><strong>Fecha:</strong> @Model.FechaComentario.ToString("dd/MM/yyyy")</p>
            </div>
        </div>

        <div class="mt-4">
            <a href="@Url.Action("Index", "ComentariosAdmin")" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
