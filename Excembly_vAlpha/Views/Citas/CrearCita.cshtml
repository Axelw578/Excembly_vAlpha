@model Excembly_vAlpha.ViewModels.CrearCitaViewModel

<h2>@(Model.CitaId == 0 ? "Crear Cita" : "Editar Cita")</h2>

<form asp-action="@(Model.CitaId == 0 ? "CrearCita" : "EditarCita")" method="post">
    @if (Model.CitaId != 0)
    {
        <input type="hidden" asp-for="CitaId" />
    }
    <input type="hidden" asp-for="UsuarioId" />

    <div class="form-group">
        <label asp-for="FechaCita"></label>
        <input type="datetime-local" asp-for="FechaCita" class="form-control" />
        <span asp-validation-for="FechaCita" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Domicilio"></label>
        <select asp-for="Domicilio" class="form-control">
            <option value="true">A Domicilio</option>
            <option value="false">En Sucursal</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DireccionId"></label>
        <input type="number" asp-for="DireccionId" class="form-control" />
        <span asp-validation-for="DireccionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TecnicoId"></label>
        <input type="number" asp-for="TecnicoId" class="form-control" />
        <span asp-validation-for="TecnicoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlanId"></label>
        <input type="number" asp-for="PlanId" class="form-control" />
        <span asp-validation-for="PlanId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ServiciosAdicionales"></label>
        <input type="text" asp-for="ServiciosAdicionales" class="form-control" placeholder="IDs de servicios separados por comas" />
        <span asp-validation-for="ServiciosAdicionales" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comentarios"></label>
        <textarea asp-for="Comentarios" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="MisCitas" class="btn btn-secondary">Cancelar</a>
</form>
