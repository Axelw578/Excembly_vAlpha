
@model Excembly_vAlpha.ViewModels.DireccionViewModel

@{
    ViewData["Title"] = "Mi Dirección";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/direccion.css">

</head>
<body>
    <div class="custom-container">
        <div class="custom-header">
            <i class="fas fa-map-marked-alt"></i> Mi Dirección
        </div>

        @if (Model.TieneDireccion)
        {
            <div class="custom-card mb-4">
                <div class="card-header">
                    <i class="fas fa-map-marker-alt"></i> @Model.Colonia
                </div>
                <div class="card-body">
                    <p><strong><i class="fas fa-road"></i> Calle:</strong> @Model.Calle</p>
                    <p><strong><i class="fas fa-building"></i> Número de edificio:</strong> @Model.NumeroEdificio</p>
                    <p><strong><i class="fas fa-clipboard"></i> Descripción:</strong> @Model.DescripcionEdificio</p>
                    <p><strong><i class="fas fa-info-circle"></i> Referencia:</strong> @Model.ReferenciaEdificio</p>
                </div>
                <div class="card-footer text-end">
                    <a href="@Url.Action("EditarDireccion", "Direccion", new { direccionId = Model.DireccionId })" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Dirección
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="custom-alert">
                <p><i class="fas fa-exclamation-circle"></i></p>
                <p>No tienes una dirección registrada.</p>
                <a href="@Url.Action("RegistrarDireccion", "Direccion")" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i> Agregar Dirección
                </a>
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
