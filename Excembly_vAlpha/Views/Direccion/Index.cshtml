@model Excembly_vAlpha.ViewModels.DireccionViewModel

@{
    ViewData["Title"] = "Mi Dirección";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1 class="mb-4 text-center">Mi Dirección</h1>
                @if (Model.TieneDireccion)
                {
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">@Model.Colonia</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Calle:</strong> @Model.Calle</p>
                            <p><strong>Número de edificio:</strong> @Model.NumeroEdificio</p>
                            <p><strong>Descripción:</strong> @Model.DescripcionEdificio</p>
                            <p><strong>Referencia:</strong> @Model.ReferenciaEdificio</p>
                        </div>
                        <div class="card-footer text-end">
                            <a href="@Url.Action("EditarDireccion", "Direccion", new { direccionId = Model.DireccionId })" class="btn btn-warning">Editar Dirección</a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info text-center">
                        <p>No tienes una dirección registrada.</p>
                        <a href="@Url.Action("RegistrarDireccion", "Direccion")" class="btn btn-primary">Agregar Dirección</a>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
