@model Excembly_vAlpha.ViewModels.DireccionViewModel

@{
    ViewData["Title"] = "Mi Dirección";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/direccion.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font
awesome/6.5.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
</head>
<body>
    <header>
        <div class="common-container">
            <h1 class="h3">
                <i class="fas fa-map-marked-alt"></i> Mi
                Dirección
            </h1>
        </div>
    </header>

    <main>
        <div class="common-container">
            @if (Model.TieneDireccion)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="fas fa-map-marker
alt"></i> @Model.Colonia
                        </h5>
                    </div>
                    <div class="card-body">
                        <p>
                            <strong><i class="fas fa-road"></i> Calle:</strong>
                            @Model.Calle
                        </p>
                        <p>
                            <strong>
                                <i class="fas fa-building"></i> Número de
                                edificio:
                            </strong> @Model.NumeroEdificio
                        </p>
                        <p>
                            <strong>
                                <i class="fas fa-clipboard"></i>
                                Descripción:
                            </strong> @Model.DescripcionEdificio
                        </p>
                        <p>
                            <strong>
                                <i class="fas fa-info-circle"></i>
                                Referencia:
                            </strong> @Model.ReferenciaEdificio
                        </p>
                    </div>
                    <div class="card-footer text-end bg-light border-top-0">
                        <a href="@Url.Action("EditarDireccion", "Direccion",
new { direccionId = Model.DireccionId })" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar Dirección
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center shadow-sm">
                    <p><i class="fas fa-exclamation-circle fa-2x"></i></p>
                    <p>No tienes una dirección registrada.</p>
                    <a href="@Url.Action("RegistrarDireccion", "Direccion")"
                       class="btn btn-primary">
                        <i class="fas fa-plus-circle"></i> Agregar Dirección
                    </a>
                </div>
            }
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.
 js"></script>
</body>
</html> 