@model Excembly_vAlpha.ViewModels.TarjetaViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Agregar Tarjeta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h2>Agregar Tarjeta</h2>

        <!-- Muestra los mensajes de error generales si existen -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="AgregarTarjeta" asp-controller="TarjetasGuardadas" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="NombreTitular" class="form-label">Nombre del Titular</label>
                <input asp-for="NombreTitular" class="form-control" required />
                <span asp-validation-for="NombreTitular" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="NumeroTarjeta" class="form-label">Número de Tarjeta</label>
                <input asp-for="NumeroTarjeta" class="form-control" type="text" required pattern="\d{16}" maxlength="16" />
                <span asp-validation-for="NumeroTarjeta" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="MesExpiracion" class="form-label">Mes de Expiración</label>
                <input asp-for="MesExpiracion" class="form-control" type="number" min="1" max="12" required />
                <span asp-validation-for="MesExpiracion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="AñoExpiracion" class="form-label">Año de Expiración</label>
                <input asp-for="AñoExpiracion" class="form-control" type="number" min="2023" required />
                <span asp-validation-for="AñoExpiracion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="CVV" class="form-label">CVV</label>
                <input asp-for="CVV" class="form-control" type="password" required pattern="\d{3,4}" maxlength="4" />
                <span asp-validation-for="CVV" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Banco" class="form-label">Banco</label>
                <input asp-for="Banco" class="form-control" required />
                <span asp-validation-for="Banco" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Marca" class="form-label">Marca</label>
                <input asp-for="Marca" class="form-control" required />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="TipoTarjeta" class="form-label">Tipo de Tarjeta</label>
                <select asp-for="TipoTarjeta" class="form-control" required>
                    <option value="">Seleccione un tipo</option>
                    <option value="Debito">Débito</option>
                    <option value="Credito">Crédito</option>
                </select>
                <span asp-validation-for="TipoTarjeta" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar Tarjeta</button>
        </form>
    </div>

    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
</body>
</html>
