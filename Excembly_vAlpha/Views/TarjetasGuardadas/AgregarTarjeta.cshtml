@model Excembly_vAlpha.ViewModels.TarjetaViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/agregarTarjeta.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="tarjeta-form">
            <div class="header">
                <h2>@(Model.TarjetaId != null ? "Editar Tarjeta" : "Agregar una Tarjeta de Crédito o Débito")</h2>
            </div>

            <div class="form-preview-container">
                <!-- FORMULARIO -->
                <form asp-action="@(Model.TarjetaId != null ? "EditarTarjeta" : "AgregarTarjeta")" method="post" class="form-section">
                    <!-- Campo oculto para ID de la tarjeta (solo para edición) -->
                    @if (Model.TarjetaId != null)
                    {
                        <input type="hidden" asp-for="TarjetaId" />
                    }

                    <div class="form-group">
                        <label for="NombreTitular">Nombre del Titular</label>
                        <input asp-for="NombreTitular" class="input-field" id="nombreTitular" placeholder="e.g. Pedro Ramirez" required>
                        @Html.ValidationMessageFor(model => model.NombreTitular, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="NumeroTarjeta">Número de tarjeta</label>
                        <input asp-for="NumeroTarjeta" class="input-field" id="numeroTarjeta" maxlength="19" placeholder="e.g. 1234 5678 9123 0000" required>
                        @Html.ValidationMessageFor(model => model.NumeroTarjeta, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group date-group">
                        <div class="input-container">
                            <label for="MesExpiracion">Mes</label>
                            <input asp-for="MesExpiracion" class="small-input" id="mesExpiracion" maxlength="2" placeholder="MM" required>
                            @Html.ValidationMessageFor(model => model.MesExpiracion, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-container">
                            <label for="AñoExpiracion">Año</label>
                            <input asp-for="AñoExpiracion" class="small-input" id="añoExpiracion" maxlength="4" placeholder="AAAA" min="2024" max="2035" required>
                            @Html.ValidationMessageFor(model => model.AñoExpiracion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="CVV">Código de Seguridad (CVV)</label>
                        <input asp-for="CVV" class="input-field small-input" id="cvv" maxlength="3" placeholder="e.g. 123" required>
                        @Html.ValidationMessageFor(model => model.CVV, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Banco">Banco</label>
                        <input asp-for="Banco" class="input-field" id="banco" placeholder="e.g. Banco del Estado">
                        @Html.ValidationMessageFor(model => model.Banco, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Marca">Marca de la tarjeta</label>
                        <input asp-for="Marca" class="input-field" id="marca" placeholder="e.g. Visa, MasterCard">
                        @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="TipoTarjeta">Tipo de tarjeta</label>
                        <select asp-for="TipoTarjeta" id="tipoTarjeta" class="input-field" required>
                            <option value="">Seleccione tipo</option>
                            <option value="Credito">Crédito</option>
                            <option value="Debito">Débito</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.TipoTarjeta, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn-save">
                            @(Model.TarjetaId != null ? "Guardar Cambios" : "Guardar Tarjeta")
                        </button>
                        <button type="button" class="btn-back" onclick="window.location.href='/TarjetasGuardadas/Index';">Volver</button>
                    </div>
                </form>

                <!-- Vista previa -->
                <div class="tarjeta-preview">
                    <div class="icono-tarjeta">
                        <i class="fas fa-credit-card"></i>
                    </div>
                    <div class="tarjeta-numero" id="preview-numeroTarjeta">
                        @(Model.NumeroTarjeta != null ? Model.NumeroTarjeta : "0000 0000 0000 0000")
                    </div>
                    <div class="tarjeta-nombre" id="preview-nombreTitular">
                        @(Model.NombreTitular != null ? Model.NombreTitular : "NOMBRE TITULAR")
                    </div>
                    <div class="tarjeta-fecha" id="preview-fechaExpiracion">
                        @(Model.MesExpiracion.ToString("D2") + "/" + Model.AñoExpiracion.ToString("D2"))
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/agregarTarjeta.js"></script>
</body>
</html>
