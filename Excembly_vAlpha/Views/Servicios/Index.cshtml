@model IEnumerable<Excembly_vAlpha.ViewModels.ServicioViewModel>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Servicios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/Servicios.css" rel="stylesheet" />
</head>
<body>
    <div class="container servicios-container">
        @foreach (var servicio in Model)
        {
            <div class="servicio card my-3 p-3">
                <!-- Imagen del servicio -->
                <div class="imagen">
                    <img src="@servicio.ImagenUrl" alt="@servicio.Nombre" class="img-fluid card-img-top" />
                </div>

                <!-- Nombre del servicio -->
                <div class="header card-title h5">@servicio.Nombre</div>

                <!-- Precio del servicio -->
                <div class="precio card-text">@servicio.Precio.ToString("C")</div>

                <!-- Descripción del servicio -->
                <div class="descripcion card-text">
                    <p>@servicio.Descripcion</p>
                </div>

                <!-- Botón para contratar -->
                <a href="@Url.Action("Crear", "Contratacion", new { servicioId = servicio.ServicioId, esPlan = false })"
                   class="btn btn-primary mt-2 contratar-btn" title="Haz clic para contratar este servicio">Contratar</a>
            </div>
        }
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Servicios.js"></script>
</body>
</html>
