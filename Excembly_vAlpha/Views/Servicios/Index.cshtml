@model IEnumerable<Excembly_vAlpha.ViewModels.ServicioViewModel>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Servicios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/Servicios.css" rel="stylesheet" />

</head>
<body>
    <div class="custom-container">
        <div class="header-title">Nuestros Servicios</div>
        <div class="servicios-container">
            @foreach (var servicio in Model)
            {
                <div class="servicio card">
                    <!-- Imagen del servicio -->
                    <div class="imagen">
                        <img src="@servicio.ImagenUrl" alt="@servicio.Nombre" class="img-fluid" />
                    </div>

                    <!-- Nombre del servicio -->
                    <div class="header">@servicio.Nombre</div>

                    <!-- Precio del servicio -->
                    <div class="precio">@servicio.Precio.ToString("C")</div>

                    <!-- Descripción del servicio -->
                    <div class="descripcion">
                        <p>@servicio.Descripcion</p>
                    </div>

                    <!-- Botón para contratar -->
                    <a href="@Url.Action("Contratar", "Servicios", new { id = servicio.ServicioId })"
                       class="btn contratar-btn" title="Haz clic para contratar este servicio">Contratar</a>

                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Servicios.js"></script>
</body>
</html>