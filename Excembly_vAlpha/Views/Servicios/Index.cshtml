@model IEnumerable<Excembly_vAlpha.ViewModels.ServicioViewModel>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Servicios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/Servicios.css" rel="stylesheet" />
</head>
<body>
    <div class="servicios-container">
        @foreach (var servicio in Model)
        {
            <div class="servicio">
                <!-- Imagen del servicio -->
                <div class="imagen">
                    <img src="@servicio.ImagenUrl" alt="@servicio.Nombre" class="img-fluid" />
                </div>

                <!-- Nombre del servicio -->
                <div class="header">@servicio.Nombre</div>

                <!-- Precio del servicio -->
                <div class="precio">@servicio.Precio.ToString("C")</div>

                <!-- Descripción del servicio -->
                <div class="descripcion">
                    <p>@servicio.Descripcion</p>
                </div>

                <!-- Botón para contratar -->
                <a href="#" class="boton" data-toggle="tooltip" title="Haz clic para contratar este servicio">Contratar</a>
            </div>
        }
    </div>

    <!-- Modal de Confirmación -->
    <div class="modal fade" id="modalConfirmacion" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">Confirmación de Contratación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Deseas contratar el servicio <span id="nombreServicio"></span> por <span id="precioServicio"></span>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="confirmarContratacion">Confirmar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Servicios.js"> </script>
</body>
</html>
